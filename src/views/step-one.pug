extends container 

include mixins/icons

block content
  form(action="/step-two" method="POST")
    .mb-4.p-3.py-2.border.border-1.rounded-1.bg-gray.w-100
      label(for="base-currency").pb-2.text-secondary You get

      .input-group.mb-2
        input(type="hidden" id="base-currency" name="base-currency" value=baseCurrencies[0].currency)

        button.btn.btn-light.dropdown-toggle.d-flex.align-items-center.border.border-1(type="button" data-bs-toggle="dropdown") 
          #base-currency-selected.d-flex.align-items-center.me-2
            each item, index in baseCurrencies
              if index == 0
                +icons.me-2(svg-icon-name=item.currency selected)
              else 
                +icons.me-2(svg-icon-name=item.currency hidden)
            span= baseCurrencies[0].currency

        ul.dropdown-menu.bg-light
            each item in baseCurrencies
              li.dropdown-item.d-flex.justify-content-between(data-base-currency=item.currency)
                div.d-flex.align-items-center.fw-medium
                  +icons.me-2(svg-icon-name=item.currency)
                  span= item.currency
    
        input.form-control.bg-light(name="base-amount" type="number" placeholder='0.00' defaultValue=0 min=0)

      #validate-base.fs-6.text-danger(hidden) ...

    .mb-4.p-3.py-2.w-100.border.border-1.rounded-1.bg-gray
      label(for="currency").pb-2.text-secondary You pay

      .input-group.mb-3
        input(type="hidden" id='currency' name="currency" value=currencies.length ? currencies[0].currency : "")

        button.btn.btn-light.dropdown-toggle.d-flex.align-items-center.border.border-1(type="button" data-bs-toggle="dropdown") 
          #currency-selected.d-flex.align-items-center.me-2
            each item, index in currencies.length ? currencies : []
              if index == 0
                +icons.me-2(svg-icon-name=item.currency selected)
              else 
                +icons.me-2(svg-icon-name=item.currency hidden)

            span= currencies.length ? currencies[0].name : "  " 

        ul#currency-list.dropdown-menu.overflow-scroll.bg-light
            each item in currencies.length ? currencies : []
             if item.providerId === 0
                li.dropdown-item.d-flex.justify-content-between(data-currency=item.currency)
                  div.d-flex.align-items-center.fw-medium
                    +icons.me-2(svg-icon-name=item.currency)
                    span= item.name
             else
               li.dropdown-item.justify-content-between(data-currency=item.currency hidden)
                  div.d-flex.align-items-center.fw-medium
                    +icons.me-2(svg-icon-name=item.currency)
                    span= item.name

        input.form-control.bg-light(name="amount" type="text" readonly value="0.00" defaultValue=0)

      #exchange-rate.mb-0.fs-6.text-secondary  ...
      
    .d-flex.align-items-center.mb-4.p-3.py-2.border.border-1.rounded-1.fs-6.bg-warning.text-truncate 
      span.material-symbols-outlined.me-1.fs-4 report 
      p.m-0.text-truncate No hidden fees

    .mb-4.fs-6.text-center.text-secondary  
      | By proceeding with this deposit you are agreeing with 
      a.link.text-decoration-none.text-tertiary(href="https://xgateway.tech/privacy-policy/") Privacy Policy
      |  & 
      a.link.text-decoration-none.text-tertiary(href="https://xgateway.tech/terms-of-use/") Terms of Use.

    button.btn.btn-primary.w-100.p-2.fw-bold(type="submit") Proceed

block scripts 
  script#script(src="/scripts/step-one.js" type="application/javascript" data-base-currencies=baseCurrencies data-currencies=currencies)